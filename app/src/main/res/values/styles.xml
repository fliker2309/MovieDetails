<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge"></style>

    <style name="ActorsTextName">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#D8D8D8</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="MovieName">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="lineHeight">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="ratingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="colorControlActivated">#FF3466</item>
        <item name="colorControlNormal">#6D6D80</item>
    </style>

    <style name="pegiInfo">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="review">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textSize">18sp</item>


    </style>


</resources>