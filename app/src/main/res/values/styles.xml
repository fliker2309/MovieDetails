<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyFirstApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

    </style>

    <style name="ActorsTextName">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#D8D8D8</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="MovieName">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="lineHeight">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="label_movie_name">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="label_movie_duration">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#565665</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">8sp</item>
        <item name="lineHeight">12sp</item>

    </style>

    <style name="ratingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="colorControlActivated">#FF3466</item>
        <item name="colorControlNormal">#6D6D80</item>
    </style>

    <style name="label_ratingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:paddingStart">0dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="colorControlActivated">#FF3466</item>
        <item name="colorControlNormal">#6D6D80</item>
    </style>

    <style name="pegiInfo">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="review">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="genre">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">#FF3466</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="label_review">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="label_cardview_movie" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/background_color</item>
    </style>
</resources>