<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:paddingBottom="24dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/first_actor_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@+id/second_actor_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cast"
        app:srcCompat="@drawable/stark" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/first_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:text="@string/robert_downey_jr"
        android:textAppearance="@style/ActorsTextName"
        app:layout_constraintEnd_toEndOf="@+id/first_actor_image"
        app:layout_constraintStart_toStartOf="@id/first_actor_image"
        app:layout_constraintTop_toBottomOf="@+id/first_actor_image" />

</androidx.constraintlayout.widget.ConstraintLayout>