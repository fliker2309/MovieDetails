<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/avengers_background"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/orig" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/gradient_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_main_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="44dp"
            android:drawableLeft="@drawable/ic_path"

            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="#6D6D80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"

            android:gravity="center_vertical"
            android:text="@string/avengers_end_game"
            android:textAllCaps="false"
            android:textAppearance="@style/MovieName"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pegi_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pegi_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="150dp"
            android:text="@string/_13"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_to_main_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"

            android:gravity="center_vertical"
            android:text="@string/action_adventure_fantasy"
            android:textColor="#FF3466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_name" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:rating="4"
            android:theme="@style/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_genre" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="3dp"
            android:text="@string/_125_reviews"
            android:textAppearance="@style/review"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toBottomOf="@+id/text_genre" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/story_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:text="@string/storyline"
            android:textColor="#ECECEC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reviews" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/story_line_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:alpha="0.75"
            android:gravity="center_vertical"
            android:text="@string/after_the_devastating_events_of_avengers_infinity_war_the_universe_is_in_ruins_with_the_help_of_remaining_allies_the_avengers_assemble_once_more_in_order_to_reverse_thanos_actions_and_restore_balance_to_the_universe"
            android:textColor="#FFFFFF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/story_line" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:text="@string/cast"
            android:textColor="#ECECEC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/story_line_description" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/first_actor_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toStartOf="@+id/second_actor_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            app:srcCompat="@drawable/stark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/second_actor_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toStartOf="@+id/third_actor_image"
            app:layout_constraintStart_toEndOf="@+id/first_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            app:srcCompat="@drawable/evans" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/third_actor_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toStartOf="@+id/fourth_actor_image"
            app:layout_constraintStart_toEndOf="@+id/second_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            app:srcCompat="@drawable/ruffulo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fourth_actor_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/third_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            app:srcCompat="@drawable/hemsword" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/first_actor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="@string/robert_downey_jr"
            android:textAppearance="@style/ActorsTextName"
            app:layout_constraintEnd_toEndOf="@+id/first_actor_image"
            app:layout_constraintStart_toStartOf="@id/first_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/first_actor_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/second_actor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="@string/chris_evans"
            android:textAppearance="@style/ActorsTextName"
            app:layout_constraintEnd_toEndOf="@+id/second_actor_image"
            app:layout_constraintStart_toStartOf="@+id/second_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/second_actor_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/third_actor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"

            android:gravity="center_vertical"
            android:text="@string/mark_ruffalo"
            android:textAppearance="@style/ActorsTextName"

            app:layout_constraintEnd_toEndOf="@+id/third_actor_image"
            app:layout_constraintStart_toStartOf="@+id/third_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/third_actor_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fourth_actor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="@string/chris_hemsworth"
            android:textAppearance="@style/ActorsTextName"
            app:layout_constraintEnd_toEndOf="@+id/fourth_actor_image"
            app:layout_constraintStart_toStartOf="@+id/fourth_actor_image"
            app:layout_constraintTop_toBottomOf="@+id/fourth_actor_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>